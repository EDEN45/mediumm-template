section.widget.widget-search
  form.search-form(role='search', method='get', action='index.html')
    label
      input.search-field(type='search', placeholder='Search â€¦', value='', name='s')
    input.search-submit(type='submit', value='Search')

section.widget.widget-tag-cloud
  h3 Tags
  .tag-cloud
    each tag in tags
      a(href='tag.html') #{tag}

section.widget.widget-meta
  h3 Meta
  ul
    each meta in metas
      li
        a(href='index.html') #{meta}

section.widget.widget-calendar
  h3 Calendar
  .calendar-wrap
    table.calendar
      caption April 2017
      thead
        tr
          th(scope='col', title='Monday') M
          th(scope='col', title='Tuesday') T
          th(scope='col', title='Wednesday') W
          th(scope='col', title='Thursday') T
          th(scope='col', title='Friday') F
          th(scope='col', title='Saturday') S
          th(scope='col', title='Sunday') S
      tfoot
        tr
          td#prev(colspan='3')
            a(href='index.html') &laquo; Aug
          td.pad
          td#next(colspan='3')
            a(href='index.html') Jan &raquo;
      tbody
        tr
          td.pad(colspan='5')
