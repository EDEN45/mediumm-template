section.widget.widget-categories
  h3 Categories Dropdown
  select(name='cat')
    option(value='-1') Select Category
    each cat in categories
      +option(cat.name, cat.child)

section.widget.widget-nav-menu
  h3 Custom menu
  .menu-container
    ul.menu
      each menu in menus
        +list(menu.name, menu.child)
