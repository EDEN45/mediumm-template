extends includes/layout.pug

block var
  -
    var hasSidebar = true
    var bodyClass = 'category'

block content
  .page-header
    h1 Category: Content

  each post in posts
    +post(
      post.categories,
      post.author.image,
      post.author.name,
      post.article.created,
      post.article.readMin,
      post.article.title,
      post.article.featuredImage,
      post.article.excerpt
    )

  +paginated()
